<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id"
                       widget="res_partner_many2one"
                       context="{'res_partner_search_mode': 'customer', 'show_address': 0, 'show_vat': True}"
                       placeholder="Type to find a customer..." readonly="state in ['cancel', 'sale']"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <label for="partner_address" string="Address"/>
                <div class="o_address_format">
                    <field name="partner_address" placeholder="Street..."
                           class="o_address_street"/>
                    <div name="partner_address_country" class="d-flex justify-content-between">
                        <field name="partner_selected_option" invisible="1"/>
                        <field name="partner_abidjan"
                               invisible="partner_selected_option != 'Abidjan'"
                               class="o_address_country"/>
                        <field name="partner_ivory_coast" invisible="partner_selected_option != 'Ivory Coast'"
                               class="o_address_country"/>
                        <field name="partner_country" invisible="partner_selected_option != 'Countries'"
                               class="o_address_country"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
