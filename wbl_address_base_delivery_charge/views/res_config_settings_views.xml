<odoo>
    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_info_settings']" position="after">
                <block title="Shop - Address Connector" id="website_address_connector">
                    <setting>
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="o_light_label col-lg-3" string="Abidjans"
                                       for="abidjans"/>
                                <field name="abidjans" widget="many2many_tags"/>
                            </div>
                        </div>
                    </setting>
                    <setting>
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="o_light_label col-lg-3" string="Ivory Coasts"
                                       for="ivory_coast"/>
                                <field name="ivory_coast" widget="many2many_tags"/>
                            </div>
                        </div>
                    </setting>
                    <setting>
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="o_light_label col-lg-3" string="Countries"
                                       for="countries"/>
                                <field name="countries" widget="many2many_tags"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
