<odoo>
    <!--  Payment Provider Form  -->
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Airwallex Payment Gateway Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'airwallex'">
                    <field name="airwallex_client_id" string="Client Id"
                           required="code == 'airwallex' and state != 'disabled'"/>
                    <field name="airwallex_api_key" string="Api Key"
                           required="code == 'airwallex' and state != 'disabled'" password="True"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
