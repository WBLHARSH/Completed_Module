<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Hyper Payment Gateway Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'hyperpay'">
                    <field name="hyperpay_merchant_id" string="Entity ID"/>
                    <field name="hyperpay_merchant_id_mada" string="Entity ID (MADA)"/>
                    <field name="hyperpay_authorization_bearer" string="Authorization Bearer"
                           required="code == 'hyperpay' and state != 'disabled'" password="True"/>
                </group>
            </group>
        </field>
    </record>
</odoo>



