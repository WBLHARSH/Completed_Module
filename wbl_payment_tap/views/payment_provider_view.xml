<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Tap Payment Gateway Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'tap'">
                    <field name="tap_secret_key" string="Secret Key"
                           required="code == 'tap' and state != 'disabled'" password="True"/>
                    <field name="three_d_secure" string="Enable 3D Secure"/>
                </group>
            </group>
        </field>
    </record>
</odoo>



